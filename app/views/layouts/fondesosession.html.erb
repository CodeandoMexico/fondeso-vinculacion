<!DOCTYPE html>
<html>
<head>
  <title><%= t("brand") %></title>
  <%= stylesheet_link_tag    'fondeso-app', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="header">
      <%= image_tag "fondeso/header-logo.png" %>
    </div>

    <div class="page">
      <div id="content">
        <%= yield %>
      </div>
    </div>

    <div class="footer">
      <%= image_tag "fondeso/logos-sedeco-cdmx.png" %>
      <%= image_tag "fondeso/logo-fondeso.png" %>
      <%= image_tag "fondeso/logo-usaid.png" %>
      <%= image_tag "fondeso/logo-cdmx.png" %>
      <%= image_tag "fondeso/logo-codeando.png" %>
    </div>
</body>
</html>
