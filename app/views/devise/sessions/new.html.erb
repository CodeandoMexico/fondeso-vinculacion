<div class="container">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin", role: "form"}) do |f| %>
    <h2 class="form-signin-heading"><%= t(".first_login") %></h2>
    <p>
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "correo electrónico" %></p>

    <p>
      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "contraseña" %></p>

    <% if devise_mapping.rememberable? -%>
      <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit t(".sign_in_button"), class: "btn btn-lg btn-default btn-block" %></div>
    <!-- <%= render "devise/shared/links" %> -->
  <% end %>
</div>
